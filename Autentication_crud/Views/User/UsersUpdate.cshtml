@model Autentication_crud.ViewModels.NewUserViewModel

@{
    ViewData["Title"] = "UsersUpdate";
}

<h1 class="text-center text-info">Acualización de datos del Usuario</h1>

<hr />
<div>
    @if (TempData["mensajeUpdateExiste"] != null)
    {
        <div class="alert alert-danger alert-dismissible fase show" role="alert">
            @TempData["mensajeUpdateExiste"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-6">
        <form asp-action="UsersUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserDataId" />
            <input type="hidden" asp-for="UserSecurityId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RegisteredUsers">Back to List</a>
</div>

